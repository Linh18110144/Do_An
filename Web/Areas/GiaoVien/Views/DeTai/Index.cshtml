@model PagedList.IPagedList<Web.Models.DeTai>
@using PagedList.Mvc;


@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/GiaoVien/Views/Shared/_Layout.cshtml";
}

<h2>Đề tài</h2>

<p>
    @Html.ActionLink("Tạo mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.First().TenDeTai)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().YeuCauDeTai)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().ThoiGianBatDau)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().ThoiGianKetThuc)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().SoTuanThucHien)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenDeTai)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.YeuCauDeTai)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ThoiGianBatDau)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ThoiGianKetThuc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoTuanThucHien)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Chi tiết", "Details", new { id = item.ID }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.ID })
            </td>

        </tr>
    }

</table>
<div style="display:flex" class=" justify-content-end ">
    <link href="~/Content/PagedList.css" rel="stylesheet" />
    @Html.PagedListPager(Model, Page => Url.Action("Index", new { Page }))
</div>